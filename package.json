{
  "name": "prompt-craft",
  "version": "1.0.0",
  "description": "A TypeScript-based prompt management system with MCP server integration for organizing work and personal prompts",
  "main": "dist/index.js",
  "bin": {
    "prompt-craft": "./dist/packages/apps/cli/index.js"
  },
  "scripts": {
    "build:cli": "tsc -p packages/apps/cli/tsconfig.json",
    "build:core": "tsc -p packages/core/tsconfig.json",
    "build:infrastructure": "tsc -p packages/infrastructure/tsconfig.json",
    "build": "npm run build:core && npm run build:infrastructure && npm run build:cli",
    "start": "node dist/packages/apps/cli/index.js",
    "dev:cli": "ts-node packages/apps/cli/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPatterns='(domain|application)'",
    "test:integration": "jest --testPathPatterns='infrastructure'",
    "lint": "tsc --noEmit",
    "web:dev": "astro dev",
    "web:build": "astro build",
    "web:preview": "astro preview",
    "web:start": "node dist-web/server/entry.mjs",
    "mcp-server": "ts-node packages/apps/mcp-server/index.ts",
    "mcp-web:dev": "astro dev --host 0.0.0.0",
    "mcp-web:build": "astro build",
    "mcp-web:preview": "astro preview --host 0.0.0.0",
    "build:all": "npm run build && npm run web:build",
    "dev:web": "concurrently \"npm run build\" \"npm run web:dev\"",
    "dev:mcp-web": "concurrently \"npm run build\" \"npm run mcp-web:dev\"",
    "clean": "rm -rf dist/ dist-web/ coverage/ packages/**/dist/"
  },
  "keywords": [
    "prompts",
    "mcp",
    "typescript",
    "productivity",
    "ai"
  ],
  "author": "Luke Adams",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@astrojs/node": "^9.4.3",
    "@astrojs/tailwind": "^6.0.2",
    "@astrojs/vercel": "^8.2.7",
    "@modelcontextprotocol/sdk": "^1.17.5",
    "@types/node": "^24.3.1",
    "astro": "^5.13.7",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@types/jest": "^30.0.0",
    "@types/ws": "^8.5.12",
    "concurrently": "^9.2.1",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.1"
  }
}
