{
  "name": "prompt-craft",
  "version": "1.0.0",
  "description": "A TypeScript-based prompt management system with MCP server integration for organizing work and personal prompts",
  "main": "dist/electron/main/index.js",
  "homepage": "./",
  "bin": {
    "prompt-craft": "./dist/packages/apps/cli/index.js"
  },
  "scripts": {
    "build:cli": "tsc -p packages/apps/cli/tsconfig.json",
    "build:core": "tsc -p packages/core/tsconfig.json",
    "build:infrastructure": "tsc -p packages/infrastructure/tsconfig.json",
    "build": "npm run build:core && npm run build:infrastructure && npm run build:cli",
    "start": "node dist/packages/apps/cli/index.js",
    "dev:cli": "ts-node packages/apps/cli/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPatterns='(domain|application)'",
    "test:integration": "jest --testPathPatterns='infrastructure'",
    "lint": "tsc --noEmit",
    "web:dev": "astro dev",
    "web:build": "astro build",
    "web:preview": "astro preview",
    "web:start": "node dist-web/server/entry.mjs",
    "mcp-server": "ts-node packages/apps/mcp-server/index.ts",
    "mcp-web:dev": "astro dev --host 0.0.0.0",
    "mcp-web:build": "astro build",
    "mcp-web:preview": "astro preview --host 0.0.0.0",
    "build:all": "npm run build && npm run web:build",
    "dev:web": "concurrently \"npm run build\" \"npm run web:dev\"",
    "dev:mcp-web": "concurrently \"npm run build\" \"npm run mcp-web:dev\"",
    "clean": "rm -rf dist/ dist-web/ coverage/ packages/**/dist/",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "ts-node -P scripts/tsconfig.json scripts/migrate.ts",
    "db:seed": "ts-node -P scripts/tsconfig.json scripts/seed.ts",
    "db:export": "ts-node -P scripts/tsconfig.json scripts/export.ts",
    "db:reset": "ts-node -P scripts/tsconfig.json scripts/reset.ts",
    "db:studio": "drizzle-kit studio",
    "electron:build:main": "tsc -p packages/apps/electron/tsconfig.main.json",
    "electron:build:preload": "tsc packages/apps/electron/shared/preload.ts --target es2020 --module commonjs --outDir dist/electron/shared",
    "electron:build:renderer": "cd packages/apps/electron/renderer && webpack --mode production",
    "electron:build": "npm run build && npm run electron:build:main && npm run electron:build:preload && npm run electron:build:renderer",
    "electron:dev:main": "tsc -p packages/apps/electron/tsconfig.main.json --watch",
    "electron:dev:preload": "tsc packages/apps/electron/shared/preload.ts --target es2020 --module commonjs --outDir dist/electron/shared --watch",
    "electron:dev:renderer": "cd packages/apps/electron/renderer && webpack serve --mode development",
    "electron:start": "cross-env NODE_ENV=development electron dist/electron/main/index.js",
    "electron:dev": "concurrently \"npm run electron:build:main\" \"npm run electron:build:preload\" \"npm run electron:dev:renderer\" \"wait-on http://localhost:3000 && npm run electron:start\"",
    "electron:pack": "npm run electron:build && electron-builder",
    "electron:dist": "npm run electron:build && electron-builder --publish=never"
  },
  "keywords": [
    "prompts",
    "mcp",
    "typescript",
    "productivity",
    "ai"
  ],
  "author": "Luke Adams",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@astrojs/node": "^9.4.3",
    "@astrojs/tailwind": "^6.0.2",
    "@astrojs/vercel": "^8.2.7",
    "@heroicons/react": "^2.2.0",
    "@modelcontextprotocol/sdk": "^1.17.5",
    "@neondatabase/serverless": "^1.0.1",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/react-router-dom": "^5.3.3",
    "astro": "^5.13.7",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.5",
    "framer-motion": "^12.23.16",
    "lucide-react": "^0.544.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@types/electron": "^1.4.38",
    "@types/jest": "^30.0.0",
    "@types/ws": "^8.5.12",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "css-loader": "^7.1.2",
    "dotenv": "^17.2.2",
    "drizzle-kit": "^0.31.4",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "html-webpack-plugin": "^5.6.4",
    "jest": "^30.1.3",
    "postcss-loader": "^8.2.0",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.5.4",
    "wait-on": "^9.0.1",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "build": {
    "appId": "com.lukeus.promptcraft",
    "productName": "Prompt Craft",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/electron/**/*",
      "dist/packages/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "packages/apps/electron/assets/",
        "to": "assets/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "icon": "packages/apps/electron/assets/app-icon.icns",
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "packages/apps/electron/assets/app-icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "packages/apps/electron/assets/app-icon.png",
      "category": "Utility",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
